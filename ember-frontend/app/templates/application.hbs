<h1>Tic Tac Toe</h1>

<table>
  <tr>Score</tr>
  <tr>
    <td>Player x: {{xScore}}</td>
    <td>Player o: {{oScore}}</td>
  </tr>
</table>
<br>
<table class='table'>
  <tr>
    <td {{action 'markBox' symbol 'one' 1}}>{{one}}</td>
    <td {{action 'markBox' symbol 'two' 2}}>{{two}}</td>
    <td {{action 'markBox' symbol 'three' 3}}>{{three}}</td>
  </tr>
  <tr>
    <td {{action 'markBox' symbol 'four' 4}}>{{four}}</td>
    <td {{action 'markBox' symbol 'five' 5}}>{{five}}</td>
    <td {{action 'markBox' symbol 'six' 6}}>{{six}}</td>
  </tr>
  <tr>
    <td {{action 'markBox' symbol 'seven' 7}}>{{seven}}</td>
    <td {{action 'markBox' symbol 'eight' 8}}>{{eight}}</td>
    <td {{action 'markBox' symbol 'nine' 9}}>{{nine}}</td>
  </tr>
</table>
